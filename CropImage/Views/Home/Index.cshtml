                                        <div class="tab-content">
                                            <div class="tab-pane active" id="Detail_1">
                                                @*<form id="CropCau" class="coords form-inline" onsubmit="return false;" action="#"></form>*@
                                                @using (Html.BeginForm("CropCau", CName, FormMethod.Post, new { @class = "coords form-inline", @enctype = "multipart/form-data" }))
                                                {
                                                    @Html.AntiForgeryToken()
                                                   // @Html.HiddenFor(model => model.ImageId)
                                                   <input value="1" type="hidden" id="idImage", name="idImage" />
                                                    <table class="table table-bordered">
                                                        <tr>
                                                            <td>
                                                                <label class="control-label">Góc trái X</label>
                                                            </td>
                                                            <td>
                                                                @*<input disabled type="text" class="form-control btn-sm x1" />*@
                                                                @Html.TextBoxFor(model => model.X, new { @class = "form-control btn-sm x1" })
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                <label class="control-label">Góc trái Y</label>
                                                            </td>
                                                            <td>
                                                                @*<input disabled type="text" class="form-control btn-sm y1" />*@
                                                                @Html.TextBoxFor(model => model.Y, new { @class = "form-control btn-sm y1" })
                                                            </td>
                                                        </tr>

                                                        <tr>
                                                            <td>
                                                                <label class="control-label">Độ rộng</label>
                                                            </td>
                                                            <td>
                                                                @Html.TextBoxFor(model => model.Width, new { @class = "form-control btn-sm w" })
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                <label class="control-label">Độ cao</label>
                                                            </td>
                                                            <td>
                                                                @Html.TextBoxFor(model => model.Height, new { @class = "form-control btn-sm h" })
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                <label class="control-label">Văn bản</label>
                                                            </td>
                                                            <td>
                                                                @Html.TextBoxFor(model => model.Lable, new { @class = "form-control btn-sm lable" })
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>Mẫu đúng hay sai</td>
                                                            <td>
                                                                <input type='checkbox' id='IsActived' name='IsActived' value='true' @(Model == null || Model.IsOK == true ? "checked=checked" : null )
                                                                       class="make-switch" data-on-color="primary" data-off-color="danger" data-on-text="Đúng" data-off-text="Sai" />
                                                            </td>
                                                        </tr>
                                                    </table>
                                                    <div class="form-actions">
                                                        <div class="row">
                                                            <div class="col-md-offset-3 col-md-9">
                                                                <button type="submit" class="btn green"><i class="fa fa-check"></i> Ghi nhận</button>
                                                                <a href="@Url.Action("Index")" class="btn default">Hủy bỏ</a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                }
                                            </div>
